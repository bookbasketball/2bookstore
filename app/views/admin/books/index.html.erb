<h1 class="title"><i class="fas fa-book"></i> 書本列表</h1>

<%= link_to "新增書本", new_admin_book_path, class: 'button is-primary is-middle' %>
<%= link_to "新增出版社", new_admin_publisher_path, class: 'button is-info is-middle' %>

<%= paginate @books %>

<section class="columns is-multiline">
  <% @books.each do |book| %>
    <div class="column is-4">
      <div class="card">
        <div class="card-image">
          <figure class="image">
            <%= cover_image_tag book, width: 300, height: 300, dummy_img: true %>
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= link_to book.title, book_path(book) %></p>
              <p class="subtitle is-6">@johnsmith</p>
            </div>
          </div>

          <div class="content">
            <%= book.description %>
            <time><%= book.published_at %></time>
            <hr>
            <%= link_to "編輯", edit_admin_book_path(book), class: 'button is-light is-small' %>
            <%= link_to "刪除", admin_book_path(book), method: 'delete', data: {confirm: '你確定嗎???'}, class: 'button is-light is-small' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>